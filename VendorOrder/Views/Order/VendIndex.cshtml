@using VendorOrder.Models;

@{
  Layout = "_Layout";
}

<div class="row">
  <div class="col-8">
    <h4>Orders for @Model.Name</h4>
  </div>
  <div class="col-4">
    <div class="row">
      <a href="/Vendor/@Model.Id/Order/New" class="btn btn-primary">Add New Order</a>
      <a href="/Vendor/@Model.Id" class="btn btn-danger">Back To Vendor</a>
    </div>
  </div>
</div>

@if (Model.GetAllOrders().Count == 0)
{
  <h3>@Model.Name has placed no orders</h3>
}

@foreach (Order order in Model.GetAllOrders())
{
  <h3>Type: @order.Type Amount: @order.Amount</h3>
}