@using VendorOrder.Models;

@{
  Layout = "_Layout";
}
<div class="container">
  @if (Model.Count == 0)
  {
    <div class="row">No Active Orders have been placed</div>
  }
  else
  {
    <div class="row">
      <div class="col-1"></div>
      <div class="col-3">Vendor</div>
      <div class="col-2">Type</div>
      <div class="col-2">Amount</div>
      <div class="col-1">Payment</div>
      <div class="col-1">Status</div>
    </div>
  }

  @for(int i = 0; i < Model.Count; i++)
  {
    <div class="row listItem">
      <div class="col-1">
        <a href="vendor/@Model[i].VendorId/order/@Model[i].Id" class="btn btn-primary">View</a>
      </div>
      <div class="col-3">@Vendor.Find(Model[i].VendorId).Name</div>
      <div class="col-2">@Model[i].Type</div>
      <div class="col-2">@Model[i].Amount</div>
      <div class="col-1">
        @if (Model[i].Payed)
        {
          <a href="vendor/@Model[i].VendorId/order/@Model[i].Id/Pay" class="btn btn-success">Payed</a>
        }
        else
        {
          <a href="vendor/@Model[i].VendorId/order/@Model[i].Id/Pay" class="btn btn-warning">Unpayed</a>
        }
      </div>
      <div class="col-1">
        @if (Model[i].Fulfilled)
        {
          <a href="vendor/@Model[i].VendorId/order/@Model[i].Id/Fulfill" class="btn btn-success">Complete</a>
        }
        else
        {
          <a href="vendor/@Model[i].VendorId/order/@Model[i].Id/Fulfill" class="btn btn-warning">Uncomplete</a>
        }
      </div>
      <div class="col-1"></div>
      <div class="col-1">
        <form action="/Vendor/@Model[i].VendorId/Order/@Model[i].Id/Delete" method="post">
          <input type="hidden" name="backUrl" value="/Orders">
          <input type="hidden" name="orderPlace" value="@(i+1)">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  }

</div>


