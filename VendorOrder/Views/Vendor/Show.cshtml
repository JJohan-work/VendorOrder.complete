@using VendorOrder.Models;

@{
  Layout = "_Layout";
}


<div class="container">
  <div class="row">
    <div class="col">
      <h3>@Model.Name</h3>
      <p>Outstanding Balance: $@Model.Balance.00</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      @if (Model.GetAllOrders().Count == 0)
      {
        <div class="col-md-12">@Model.Name has placed no orders</div>
      }

      @foreach (Order order in Model.GetAllOrders())
      {
        <div class="col-md-12">Type: @order.Type Amount: @order.Amount</div>
      }
    </div>
    <div class="col-md-4">
      @Model.Desc;
    </div>
  </div>
  <div class="row">
    <a href="/Vendor/@Model.Id/Orders" class="btn btn-primary">Add/Edit Orders</a>
    <a href="/Vendors" class="btn btn-danger">Back</a>
  </div>
</div>








