@{
  Layout = "_Layout";
}

<h1>Add Vendor to Database</h1>

<form action="/Vendors" method="post" class="creationForm">
  <div class="form-group">
    <label for="VendorName">Vendor Name</label>
    <input type="text" id="VendorName" name="VendorName">
  </div>
  <div class="form-group">
    <label for="VendorDesc">Vendor Description</label>
    <input type="text" id="VendorDesc" name="VendorDesc">
  </div>
  <button type="submit" class="btn btn-primary">Add Vendor</button>
</form>

<h4><a href="/Vendors" class="btn btn-danger">Cancel</a></h4>