@using VendorOrder.Models;

@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row">
    <div class="col-8">
      <h4>Registered Vendors</h4>
    </div>
    <div class="col-4">
      <a href="/Vendor/New" class="btn btn-primary">Add Vendor</a>
    </div>
  </div>

  @if (Model.Count == 0)
  {
    <div class="col-md-12">No Vendors have Currently Registered</div>
  }
  else
  {
    <div class="row">
      <div class="col-4">Vendor Name</div>
      <div class="col-2">Number of Orders</div>
      <div class="col-2">Owed Balance</div>
    </div>
  }
  @foreach (Vendor vendor in Model)
  {
    <div class="row listItem">
      <div class="col-4">@vendor.Name</div>
      <div class="col-2">@vendor.Orders.Count</div>
      <div class="col-2">@vendor.Balance</div>
      <div class="col-2"></div>
      <div class="col-2">
        <a href="/Vendor/@vendor.Id" class="btn btn-primary">View Vendor</a>
      </div>
    </div>
  }
</div>



