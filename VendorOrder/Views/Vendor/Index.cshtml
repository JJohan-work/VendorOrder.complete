@using VendorOrder.Models;

@{
  Layout = "_Layout";
}

<div class="row">
  <div class="col-8">
    <h4>Registered Vendors</h4>
  </div>
  <div class="col-4">
    <h4><a href="/Vendor/New">Add Vendor</a></h4>
  </div>
</div>

@if (Model.Count == 0)
{
  <h3>No Vendors have Currently Registered</h3>
}

@foreach (Vendor vendor in Model)
{
  <div class="row">
    <div class="col-8">
      <h3><a href="/Vendor/@vendor.Id">@vendor.Name</a></h3>
    </div>
  </div>
}




